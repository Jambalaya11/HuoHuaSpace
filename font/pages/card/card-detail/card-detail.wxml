  <text class="title" catchtap="oncardtap" data-cardId="{{cardData.title}}">{{cardData.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image wx:if="{{liked}}" catchtap="onLikeTap" src=" /images/icon/collected.png"></image>
      <image wx:else catchtap="onLikeTap" src="/images/icon/pcollect.png "></image>
      <!--<image  class="share-img " src="/images/icon/share.png "></image>-->
    </view>
    <view class="horizon "></view>
  </view>
  <text class="detail ">{{cardData.content}}</text>
</view>